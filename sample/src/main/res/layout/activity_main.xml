<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical" >

            <include layout="@layout/basic_usage" />

            <include layout="@layout/complete_example" />

            <include layout="@layout/iterator" />

            <include layout="@layout/monotonically_increasing_integers" />

            <include layout="@layout/time_to_live" />

            <include layout="@layout/backup_restore" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>